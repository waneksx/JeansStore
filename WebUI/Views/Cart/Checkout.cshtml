@model DomainModel.Entities.ShippingDetails
@{
    ViewBag.Title = "SportStore: Checkout";
}
<h2>Check out now</h2>
Please enter your details, and we'll ship your goods right away!
@using (Html.BeginForm())
{
    <h3>Ship to</h3>
    <div>First name: @Html.EditorFor(x => x.FirstName)</div>
    <div>Last name: @Html.EditorFor(x => x.LastName)</div>
    <h3>City</h3>   
    <div>City: @Html.EditorFor(x => x.City)</div>
    <h3>Phone number</h3>
    <div>@Html.EditorFor(x => x.Phone)</div>
    <h3>E-mail</h3>
    <div>@Html.EditorFor(x => x.Email)</div>
    
    <p align="center">
        <input class="actionButtons" type="submit" value="Complete order" />
    </p>
}